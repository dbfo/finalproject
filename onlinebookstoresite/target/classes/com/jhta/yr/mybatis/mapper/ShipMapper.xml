<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace = "com.jhta.yr.mybatis.mapper.ShipMapper">
	<select id = "shipCount" resultType = "int">
		select count(*) from bpayment group by bstatus order by bstatus
	</select>
	
	<update id="updateBeforeToPreparing" parameterType="list">
		update bpayment set bstatus = 1 where
		<foreach collection="list" item = "bpaynum" separator="or">
	 	  bpaynum = #{bpaynum} 
		</foreach>	
	</update>
</mapper>